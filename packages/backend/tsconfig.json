{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2017",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./*"]
    }
  }
}
